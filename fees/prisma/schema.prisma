datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "cargo prisma"
  output   = "../src/db.rs"
}

model Deliveries {
  id                Int       @id @default(autoincrement())
  hash              String
  source_chain      String
  dest_chain        String
  delivery_type     Int
  created_at        Int
}

model LatestHeights {
  id              Int       @id @default(autoincrement())
  source_chain    String
  dest_chain      String
  latest_height   Int
}